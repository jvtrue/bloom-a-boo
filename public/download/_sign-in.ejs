<div class="slides">
	<div id="download" class="slide">
		<div class="body">
			<h2>Sign In</h2>
			<form id="sign-in-form" class="content">
	    		<p class="field 
					{{#invalid.email}}invalid{{/invalid.email}}">
					<span class="error"><span>{{invalid.email}}</span></span>
	    			<label for="email">Email</label>
	    			<input id="email" name="email" type="text" value="{{email}}" />
	    		</p>
	    		<p class="field 
					{{#invalid.password}}invalid{{/invalid.password}}">
					<span class="error"><span>{{invalid.password}}</span></span>
	    			<label for="password">Password</label>
	    			<input id="password" name="password" type="password" value="{{password}}" />
	    		</p>
	    		<div class="actions">
		    		<ul class="nav">
		    			<li>
		    				<a href="#register">Register</a>
		    			</li>
		    			<li>
		    				<a href="#reset-password">Reset Password</a>
		    			</li>
		    		</ul>
	    			<input type="submit" value="Sign In" />
	    		</div>
		    </form>
		</div>
	</div>
</div>