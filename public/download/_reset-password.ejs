<div class="slides">
	<div id="download" class="slide">
		<div class="body">
			<h2>Reset Password</h2>
			<form id="reset-password-form" class="content">
				{{#success}}
				<h3>Success</h3>
				<p>An email has been sent to <strong>{{email}}</strong> with instructions on how to reset your password.</p>
				{{/success}}
				{{^success}}
	    		<p class="field 
					{{#invalid.email}}invalid{{/invalid.email}}">
					<span class="error"><span>{{invalid.email}}</span></span>
	    			<label for="email">Email</label>
	    			<input id="email" name="email" type="text" value="{{email}}" />
	    		</p>
	    		<div class="actions">
		    		<ul class="nav">
		    			<li>
		    				<a href="#sign-in">Sign In</a>
		    			</li>
		    		</ul>
	    			<input type="submit" value="Request Reset" />
	    		</div>
				{{/success}}
		    </form>
		</div>
	</div>
</div>